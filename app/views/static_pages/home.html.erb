<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="vm_form">
        <%= render 'shared/vm_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>VM list</h3>
      <h4 style="color:#848484">Details: CPU=2 / RAM=1024 </h4>
      <%= render 'shared/feed' %>
