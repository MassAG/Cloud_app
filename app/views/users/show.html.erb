<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.vms.any? %>
      <h3>My VMs (<%= @user.vms.count %>)</h3>
      <ol class="vms">
        <%= render @vms %>
      </ol>
      <%= will_paginate @vms %>
    <% end %>
  </div>
</div>

